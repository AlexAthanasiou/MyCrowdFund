@model MyCrowdFund.Options.CreateBackerOptions

    <form class="js-create-backer col-md-4" method="post"
          action="@Url.Action( "Create", "Backer" )">

        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control js-firstname">
        </div>

        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control js-lastname">
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control js-email">
        </div>

        <div class="form-group">
            <label>Age</label>
            <input type="text" class="form-control js-age">
        </div>

        <div class="form-group">
            <label>Photo</label>
            <input type="text" class="form-control js-photo">
        </div>

        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control js-username">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="text" class="form-control js-password">
        </div>

        <button type="button" class="btn btn-primary js-submit-backer">Submit</button>
    </form>

<div class="alert alert-danger js-backer-alert" role="alert"
     style="display: none">
</div>

<div class="alert alert-success js-backer-success" role="alert"
     style="display: none">
</div>