@model MyCrowdFund.Web.Models.BackerViewModel

<form class="js-create-backer col-md-4" method="post" action="@Url.Action( "Create", "Backer" )">

    <div class="form-group ">

     
        <label for="@Html.IdFor(b => b.Options.Firstname)">First Name</label>
        <br >
        @Html.TextBoxFor( b => b.Options.Firstname, new {
            @class = "form control js-firstname",
       placeholder = "Enter your First name "
        } )
    </div>
    <div class="form-group ">
        <label for="@Html.IdFor(b => b.Options.Lastname)">Last Name</label>
        <br>
        @Html.TextBoxFor( b => b.Options.Lastname, new {
            @class = "form control js-lastname ",
       placeholder = "Enter your Last name "
        } )
    </div>

    <div class="form-group ">
        <label for="@Html.IdFor(b => b.Options.Email)">Email</label>
        <br>
        @Html.TextBoxFor( b => b.Options.Email, new {
           @class = "form control js-email",
      placeholder = "Enter your email "
      } )
    </div>

    <div class="form-group  ">
        <label for="@Html.IdFor(b => b.Options.Age)">Age </label>
        <br>
        @Html.TextBoxFor( b => b.Options.Age, new {
            @class = "form control js-age",
       placeholder = "Enter your age "
        } )
    </div>
    <div class="form-group ">
        <label for="@Html.IdFor(b => b.Options.Photo)">Photo</label>
        <br>
        @Html.TextBoxFor( b => b.Options.Photo, new {
            @class = "form control js-photo",
       placeholder = "Enter your Photo "
        } )
    </div>


    <button type="button" class="btn btn-primary js-submit-backer">Submit</button>
</form>

<div class="alert alert-danger js-create-backer-alert" role="alert"
     style="display: none">
</div>

<div class="alert alert-success js-create-backer-success" role="alert"
     style="display: none">
</div>