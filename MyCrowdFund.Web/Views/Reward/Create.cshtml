@model MyCrowdFund.Options.CreateRewardOptions

    <form class="js-reward col-md-4" method="post" action="@Url.Action("Create", "Reward")">

        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control js-title">
        </div>   
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control js-desc">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control js-price">
        </div>
        <div class=" form-group ">
            @Html.HiddenFor( r => r.TempId,
          new { @class = "form-control js-tid", placeholder = "enter tid" } )
        </div>
        <div class=" form-group ">
            @Html.HiddenFor( r => r.CreatorId,
          new { @class = "form-control js-cid", placeholder = "enter cid" } )
        </div>

        <button type="button" class="btn btn-primary js-reward-submit"> Submit</button>
    </form>

<div class="alert alert-danger js-create-reward-alert" role="alert"
     style="display: none">
</div>

<div class="alert alert-success js-create-reward-success" role="alert"
     style="display: none">
</div>